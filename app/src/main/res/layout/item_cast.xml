<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="cast"
            type="com.herdal.moviehouse.data.remote.model.movie_credits.CastDto" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:padding="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:clickable="true"
            android:focusable="true">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardViewCast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="90dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivPerson"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:loadImage="@{cast.profile_path}"
                    android:scaleType="fitXY"
                    tools:srcCompat="@tools:sample/avatars" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tvCastName"
                style="@style/PersonText.XLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@{cast.name}"
                app:layout_constraintStart_toEndOf="@+id/cardViewCast"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvCastCharacter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/PersonText"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@{cast.character}"
                app:layout_constraintStart_toEndOf="@+id/cardViewCast"
                app:layout_constraintTop_toBottomOf="@+id/tvCastName" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>